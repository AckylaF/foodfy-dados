{% extends "../layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin/chefDetail.css">
    <title>Chef - Foodfy</title>
{% endblock head %}


{% block content %}

    <main class="container">
        <div id="title-container">
            <p id="title">Chef: {{chef.name}}</p>
            <a href="/admin/chefs/{{chef.id}}/edit">
                <button id="edit-chef">Editar chef</button>
            </a>
        </div>

        <div id="highlight">
            <img class="chef-image" src="{{chef.avatar_url}}" alt="{{chef.name}}">
            <h1 class="chef-name">{{chef.name}}</h1>
            <p class="total-recipes">4 receitas</p>
        </div>

        <p class="recipes-title">Receitas</p>
        <section id="recipes">
            <div class="cards" id="burger">
                <img src="/layouts/assets/burger.png" alt="bacon-burger">
                <span>
                    <h5 class="food-name">Triplo bacon burger</h5>
                    <p class="cook">por Jorge Relato</p>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </span>
            </div>
        </section>
    </main>

{% endblock content %}